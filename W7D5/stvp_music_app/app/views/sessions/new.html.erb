<%= render partial: 'shared/error' %>
<h2>Sign In</h2>

<a href="<%= new_user_url%>">Go To Sign Up</a>

<form action="<%= @activation_token ? "#{session_url}?activation_token=#{@activation_token}" : session_url %>" method="POST" >
    <%= auth_token %>
    <ul class='flex-outer'>
    <li>
    <label for="username">Username:</label> 
    <br>
    <input type="text" name="user[username]" id="username" value="<%= @user_details.username%>">
    <br>
    </li>
    <li>
    <label for="password">Password:</label>
    <br>
    <input type="password" name="user[password]" id="password" value="<%= @user_details.password%>">
    <br>
    </li>
    <li>
    <input type="submit" value ='Login'>
    </li>
    </ul>

</form>